{
  "name": "@monorepo/graphql",
  "version": "0.1.0",
  "private": true,
  "description": "Apollo server for @monorepo/server",
  "main": "dist/index",
  "files": [
    "src"
  ],
  "scripts": {
    "build": "npm run clean && npm run compile",
