    "graphql": "^15.3.0",
    "graphql-iso-date": "^3.6.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.17.0",
    "@graphql-codegen/typescript": "1.17.0",
    "@graphql-codegen/typescript-resolvers": "1.17.0",
    "@types/graphql-iso-date": "^3.4.0",
    "@types/node": "^14.0.23",
    "apollo-server-plugin-base": "^0.9.1",
    "rimraf": "^3.0.2",
    "typescript": "^3.9.7"
  }
}
